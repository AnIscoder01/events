 {% if listeI is empty %}
        <div class="alert alert-warning text-center mt-4" role="alert">
            Aucun événement trouvé pour ce client.
        </div>
    {% else %}
        <div class="table-responsive mt-4">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Lieu</th>
                </tr>
                </thead>
                <tbody>
                {% for e in listeI %}
                    <tr>
                        <td>{{ e.event.id }}</td>
                        <td>{{ e.event.nom }}</td>
                        <td>{{ e.event.lieu }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

<div class="mt-4">
    <a href="{{ path('app_event') }}" class="btn btn-secondary">Retour à la liste des événements</a>
</div>
